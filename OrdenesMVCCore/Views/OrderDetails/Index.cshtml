@model IEnumerable<OrdenesMVCCore.Models.OrderDetail>

@{
    ViewData["Title"] = "Listado de productos";
}

<h1>@ViewData["Title"]</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceEach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceEach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderDetailId">Edit</a> |
                <a class="btn btn-primary" asp-controller="OrderDetails" asp-route-id="@item.OrderId" asp-action="Index">Detalle de la orden</a>
                <a asp-action="Delete" asp-route-id="@item.OrderDetailId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        window.addEventListener('load', function() {
            var orderId = getIdFromURL();
            //alert(customerId);
        });

        function getIdFromURL() {
            var urlArray = window.location.href.split('/Index/');
            var id = urlArray[urlArray.length - 1];
            return id;
        }
    </script>
}
