@model IEnumerable<OrdenesMVCCore.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Customers</h1>

<p>
    <a asp-action="Create">Nuevo Customer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerBornDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerBornDate)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.CustomerId">Edit</a> |
                 <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CustomerId">Delete</a>|
                                            @*<a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Create">Orden</a>*@
                                            <a class="btn btn-primary" asp-controller="Orders" asp-route-id="@item.CustomerId" asp-action="Filtro">Orden</a>
   
                @*<a asp-action="Details" class="btn btn-primary" asp-route-id="@item.CustomerId">Details</a> |*@

             </td>
        </tr>
}
    </tbody>
</table>
